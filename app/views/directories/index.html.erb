<div class="row">
  <div class="span10 offset1">

    <table class="table table-bordered">

      <thead>
      <tr>
        <td>Наименование</td>
        <td>[actions]</td>
      </tr>
      </thead>

      <% @items.each do |b| %>
          <tr>
            <td>
              <%= b.name %>
            </td>
            <td>
              <%= link_to '[delete]', b, :method => :delete, :class => 'btn btn-small btn-danger' %>
            </td>
          </tr>
      <% end %>
    </table>
  </div>
</div>