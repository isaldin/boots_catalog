<%= form_for @item do |f| %>

    <% if @item.errors.any? %>
        <div class="alert alert-error">
          <a class="close" data-dismiss="alert">&#215;</a>
          <ul>
            <% @item.errors.full_messages.each do |msg| %>
                <%= content_tag :li, msg, :id => "error_#{msg}" if msg.is_a?(String) %>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <br>

    <%= f.submit @item.id ? 'Save' : 'Create', :class => 'btn btn-primary' %>
    &nbsp;&nbsp;&nbsp;&nbsp;
    <%= link_to 'Cancel', polymorphic_path(@item.class), :class => 'btn btn-default' %>
<% end %>